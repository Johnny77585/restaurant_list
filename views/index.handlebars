<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <div class="d-flex justify-content-between">
          <h4 class="mb-2">尋找餐廳：</h4>
          <a class="btn btn-outline-secondary" style="margin-bottom: 10px" href="./restaurants/new"
            role="button">新增餐廳</a>
        </div>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>


<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

            </div>

        </a>
        <div class="card-footer text-muted text-right">
          <a href="./restaurants/{{ this._id }}/edit" class="btn btn-primary btn-sm "
            style="margin-right: 10px; background-color: #3e8192; border-color:#3e8192">edit</a>
          <a href="./restaurants/{{ this._id }}" class="btn btn-primary btn-sm"
            style="margin-right: 10px; background-color: #3e8192;border-color:#3e8192">detail</a>
          <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-primary btn-sm"
              style="background-color: rgba(207, 18, 18, 0.815);border-color:rgba(207, 18, 18, 0.815)">delete</button>
          </form>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
</div>