<h1 class="mb-1 restaurant-show-title">新增餐廳</h1>
<div style="margin: 20px 20% 0px 20%">
  <form action="/restaurants" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">餐廳店名<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="name" placeholder="Dong Dong日本料理" name="name" required />
    </div>
    <div class="mb-3">
      <label for="name_en" class="form-label">英文餐廳名<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="name_en" placeholder="Dong Dong Japanese Cuisine" name="name_en"
        required />
    </div>
    <div class="mb-3">
      <label for="category" class="form-label">分類<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="category" placeholder="日本料理" list="categoryOptions" name="category"
        required />
      <datalist id="categoryOptions">
        <option>美式</option>
        <option>咖啡</option>
        <option>中東料理</option>
        <option>日本料理</option>
        <option>義式餐廳</option>
      </datalist>
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">圖片連結<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="image" placeholder="" name="image" required />
    </div>
    <div class="mb-3">
      <label for="location" class="form-label">位址<span class="text-danger">*</span></label>
      <input type="url" class="form-control" id="location" placeholder="台南市中西區美南街125號" name="location" required />
    </div>
    <div class="mb-3">
      <label for="phone" class="form-label">電話<span class="text-danger">*</span></label>
      <input type="tel" class="form-control" id="phone" placeholder="06-2954564" name="phone" required />
    </div>
    <div class="mb-3">
      <label for="google_map" class="form-label">google map<span class="text-danger">*</span></label>
      <input type="url" class="form-control" id="google_map" placeholder="" name="google_map" required />
    </div>
    <div class="mb-3">
      <label for="rating" class="form-label">評分<span class="text-danger">*</span></label>
      <input type="number" class="form-control" id="rating" name="rating" required />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">描述<span class="text-danger">*</span></label>
      <textarea class="form-control" id="description" rows="3" name="description" required></textarea>
    </div>
    <div class="col-12">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>